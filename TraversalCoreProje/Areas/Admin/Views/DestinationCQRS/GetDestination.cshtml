@model GetDestinationByIDQueryResult
@{
    ViewData["Title"] = "GetDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rezervasyon Düzenleme Sayfası</h1>

<form method="post">
    <input type="hidden" aps-for="DestinationID" />

    <label>Şehir</label>
    <input type="text" aps-for="City" class="form-control" />
    <br />

    <label>Gün-Gece</label>
    <input type="text" aps-for="DayNight" class="form-control" />
    <br />

    <label>Fiyat</label>
    <input type="text" aps-for="Price" class="form-control" />
    <br />

    <button class="btn btn-outline-success">Lokasyon Bilgilerini Güncelle</button>
</form>
