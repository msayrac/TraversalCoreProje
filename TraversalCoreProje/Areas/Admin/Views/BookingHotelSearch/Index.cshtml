@model IEnumerable<BookingHotelSearchViewModel.Result>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
	
}

<h1>Booking Hotel Rezervasyon Sayfası</h1>
<h3>Arama Yapılan Şehir: Paris/Fransa</h3>

<table class="table table-striped">
	<tr>
		<th>#</th>
		<th>Otel Adı</th>
		<th>Otel Puanı</th>
		<th>Otel Degerlendirmesi</th>
		<th>Detaylar</th>

	</tr>

	@foreach (var item in Model)
	{
		count++;
		<tr>
			<td>@count</td>
			<td>@item.name</td>
			<td>@item.reviewScore</td>

			@{
				if (item.reviewScoreWord.Equals("Very good"))
				{
					<td>Çok İyi</td>
				}
				if (item.reviewScoreWord.Equals("Good"))
				{
					<td>İyi</td>
				}
				if (item.reviewScoreWord.Equals("Fabulous"))
				{
					<td>Harika</td>
				}
				if (item.reviewScoreWord.Equals("Superb"))
				{
					<td>Süper</td>
				}
				if (item.reviewScoreWord.Equals("Exceptional"))
				{
					<td>Harika Ötesi</td>
				}
				if (item.reviewScoreWord.Equals(""))
				{
					<td>-</td>
				}

			}
			@*<td>@item.reviewScoreWord</td>*@
			<td>
				<a href="#" class="btn btn-outline-dark">Detaylar</a>
			</td>


		</tr>
	}
</table>

